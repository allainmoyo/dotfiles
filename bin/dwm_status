#!/bin/zsh
print_layout(){
	xkblayout-state print %s | awk '{print toupper($l)}' 
}

print_volume(){
	amixer -M get Master | awk '$0~/%/{print $6=="[off]"?$6:$4}' | tr -d '[]'
}


print_cpu_process(){
	ps axch -o cmd,%cpu --sort=-%cpu | awk 'NR==1{ print $1 }' | sed -e 's/\b\(.\)/\u\1/g'
}

print_cpu_percentage(){
	print_singleload="$(ps axch -o cmd,%cpu --sort=-%cpu | awk 'NR==1{print $2}')"
	if (($print_singleload >= 40 && $print_singleload <= 99.9)); then
		# use green color
		echo "$print_singleload%"
	elif (($print_singleload >= 100 && $print_singleload <= 199)); then
		# use yellow color
		echo "$print_singleload%"
	elif (($print_singleload >= 200)); then
		# use red color
		echo "$print_singleload%"
	else
		# use default color
		echo "$print_singleload%"
	fi
}

print_cpu_temp(){
	temp="$(acpi -t | awk '{printf("%d", $4)}')"
	if (($temp >= 42 && $temp <= 51)); then
		# use green color
		echo "$temp째C"
	elif (($temp >= 52 && $temp <= 62)); then
		# use yellow color
		echo "$temp째C"
	elif (($temp >= 62)); then
		# use red color
		echo "$temp째C"
	else
		# use default color
		echo "$temp째C"
	fi
}

print_bat_status(){
	bat_status="$(cat /sys/class/power_supply/BAT0/status)"
	capacity=$(cat /sys/class/power_supply/BAT0/capacity)
	if [ $bat_status = "Unknown" ]; then
		echo "Limit Reached"
	elif [ $bat_status = "Charging" ]; then
		# use green color
		echo "$bat_status"
	elif (($capacity <= 15 && $capacity >= 6)); then
		# use yellow color
		echo "$bat_status"
	elif (($capacity <= 5)); then
		# use red color
		echo "$bat_status"
	else
		echo "$bat_status"
	fi
}

print_bat_percentage(){
	bat_status="$(cat /sys/class/power_supply/BAT0/status)"
	capacity=$(cat /sys/class/power_supply/BAT0/capacity)
	if (($capacity <= 15 && $capacity >= 6)); then
		# use yellow color
		echo "$capacity%"
	elif (($capacity <= 5)); then
		# use red color
		echo "$capacity%"
	else
		# use default color
		echo "$capacity%"
	fi
}

print_date(){
	date "+%a %d %m %I:%M%P"
}

while true
do	
	xsetroot -name " $(print_layout)  VOLUME:$(print_volume)  CPU:$(print_cpu_process) $(print_cpu_percentage) $(print_cpu_temp)  BATTERY:$(print_bat_status) $(print_bat_percentage)  $(print_date)"
	sleep 1

done
